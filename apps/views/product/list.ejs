        <script src="/static/js/addCartMixin.js"></script>
        <script>
            new Vue({
                el: "#product-list",
                mixins: [addCartMixin],
                data: {
                    products: [],
                    title: "Đang tải...", // Giá trị mặc định
                },
                methods: {
                    async loadProducts(type = "all", categoryId = null) {
                        try {
                            let url = "/api/product";
                            if (type === "special") {
                                url = "/api/product/random";
                                this.title = "Sản phẩm nổi bật";
                            } else if (type === "new") {
                                url = "/api/product/new";
                                this.title = "Sản phẩm mới";
                            } else if (type === "category" && categoryId) {
                                url = `/api/product/cate/${categoryId}`;
                                const [productRes, cateRes] = await Promise.all([
                                    fetch(url),
                                    fetch(`/api/category/${categoryId}`)
                                ]);
                                const [productData, cateData] = await Promise.all([
                                    productRes.json(),
                                    cateRes.json()
                                ]);
                                this.products = productData;
                                this.title = cateData.name;
                                return; // Thoát sớm để không chạy code bên dưới
                            } else {
                                this.title = "Danh sách sản phẩm";
                            }

                            const res = await fetch(url);
                            const data = await res.json();
                            this.products = data;
                        } catch (err) {
                            console.error("Lỗi khi lấy sản phẩm:", err);
                        }
                    },
                    getTypeFromURL() {
                        const path = window.location.pathname;

                        if (path.includes("/special")) return { type: "special" };
                        if (path.includes("/new")) return { type: "new" };
                        if (path.includes("/cate")) {
                            const id = path.split("/cate/")[1];
                            return { type: "category", categoryId: id };
                        }
                        return { type: "all" }; // Không cần gán title ở đây
                    },
                },
                mounted() {
                    const { type, categoryId } = this.getTypeFromURL();
                    this.loadProducts(type, categoryId);
                }
            });
        </script>

