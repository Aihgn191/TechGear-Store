    <script src="https://www.paypal.com/sdk/js?client-id=<%= clientId %>"></script>
    <script src="/static/js/cartMixin.js"></script>
    <script>
        new Vue({
            el: "#order",
            mixins: [cartMixin],
            data: {
                cartItems: [],
                form: {
                    username: '',
                    address: '',
                    phonenumber: '',
                    ghichu: '',
                    phuongthuc: 'Tiền mặt',
                    ispay: false,
                    totalprice: 0
                },
                shippingFee: 2
            },
            computed: {
                totalWithShipping() {
                    return this.subtotal + this.shippingFee;
                }
            },
            mounted() {
                this.loadCart();
                this.form.username = '<%= user %>';
                this.form.address = '<%= address %>';
                this.form.phonenumber = '<%= phonenumber %>';
                this.initPaypal();
            },
            methods: {
                async submitOrder() {
                    // Thanh toán thông thường (Tiền mặt)
                    this.form.totalprice = this.totalWithShipping;
                    const orderData = {
                        username: this.form.username,
                        address: this.form.address,
                        phonenumber: this.form.phonenumber,
                        ghichu: this.form.ghichu,
                        phuongthuc: this.form.phuongthuc,
                        ispay: this.form.ispay,
                        totalprice: this.form.totalprice,
                        items: this.cartItems.map(item => ({
                            productId: item.product._id,
                            productName: item.product.ten,
                            quantity: item.quantity,
                            price: item.product.gia
                        }))
                    };

                    try {
                        const response = await fetch('/api/order', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(orderData)
                        });

                        if (response.ok) {
                            const result = await response.json();
                            console.log('Order created:', result);
                            localStorage.removeItem("cart"); // Xóa giỏ hàng
                            this.cartItems = [];
                            window.location.href = '/cart/success';
                        } else {
                            alert('Đặt hàng thất bại!');
                        }
                    } catch (err) {
                        console.error('Error:', err);
                        alert('Có lỗi xảy ra!');
                    }
                },
                async submitPaypalOrder() {
                    // Gửi đơn hàng sau khi PayPal thanh toán thành công
                    this.form.totalprice = this.totalWithShipping;
                    this.form.phuongthuc = 'Paypal';
                    this.form.ispay = true;
                    this.form.ghichu = 'Thanh toán qua PayPal';

                    const orderData = {
                        username: this.form.username,
                        address: this.form.address,
                        phonenumber: this.form.phonenumber,
                        ghichu: this.form.ghichu,
                        phuongthuc: this.form.phuongthuc,
                        ispay: this.form.ispay,
                        totalprice: this.form.totalprice,
                        items: this.cartItems.map(item => ({
                            productId: item.product._id,
                            productName: item.product.ten,
                            quantity: item.quantity,
                            price: item.product.gia
                        }))
                    };

                    try {
                        const response = await fetch('/api/order', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(orderData)
                        });

                        if (response.ok) {
                            const result = await response.json();
                            console.log('PayPal Order created:', result);
                            localStorage.removeItem("cart"); // Xóa giỏ hàng
                            this.cartItems = [];
                            window.location.href = '/cart/success';
                        } else {
                            alert('Đặt hàng qua PayPal thất bại!');
                        }
                    } catch (err) {
                        console.error('PayPal Error:', err);
                        alert('Có lỗi xảy ra khi xử lý PayPal!');
                    }
                },
                initPaypal() {
                    paypal.Buttons({
                        style: {
                            layout: 'vertical',
                            color: 'gold',
                            tagline: 'false'
                        },
                        createOrder: (data, actions) => {
                            return actions.order.create({
                                purchase_units: [{
                                    amount: {
                                        currency_code: "USD",
                                        value: this.totalWithShipping.toString()
                                    }
                                }]
                            });
                        },
                        onApprove: (data, actions) => {
                            return actions.order.capture().then((response) => {
                                if (response.status === "COMPLETED") {
                                    this.submitPaypalOrder();
                                }
                            });
                        },
                        onError: (err) => {
                            console.error('PayPal Error:', err);
                            alert('Có lỗi xảy ra với PayPal!');
                        }
                    }).render('#paypal-button-container');
                }
            }
        });
    </script>
